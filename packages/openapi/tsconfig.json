{
  "compilerOptions": {
    "target": "ES2020",
    /* If NOT transpiling with TypeScript: */
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*"]
}
